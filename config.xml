<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rydzwr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
>
  <name>Shared Shopping List</name>
  <description>Shared Shopping List</description>
  <author email="rydzwr@gmail.com">
    Kacper Rydzynski
  </author>
  <content src="index.html"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>

  <platform name="android">
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="src/assets/splashscreen.xml" />
    <!-- Other Android specific preferences and configurations -->
  </platform>

  <preference name="SplashScreenDelay" value="3000" />
  <preference name="FadeSplashScreenDuration" value="750" />
  <preference name="AndroidWindowSplashScreenBackground" value="#1a0a30" />


</widget>

